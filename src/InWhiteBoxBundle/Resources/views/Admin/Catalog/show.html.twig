{% extends 'KamBundle:Administrator:admin.html.twig' %}
{% block title %}Новость{% endblock %}
{% block body %}
    <h1>Новость</h1>
    <div class="col-sm-10">
        <div class="row row_margin">
            <div class="col-sm-3">ID</div>
            <div class="col-sm-7">{{ news.id }}</div>
        </div>
        <div class="row row_margin">
            <div class="col-sm-3">Дата</div>
            <div class="col-sm-7">{% if news.date %}{{ news.date|date('Y-m-d') }}{% endif %}</div>
        </div>
        <div class="row row_margin">
            <div class="col-sm-3">Превью</div>
            <div class="col-sm-7">
                {% autoescape %}
                    {{ news.preview|raw }}
                {% endautoescape %}
            </div>
        </div>
        <div class="row row_margin">
            <div class="col-sm-3">Текст новости</div>
            <div class="col-sm-7">
                {% autoescape %}
                    {{ news.text|raw }}
                {% endautoescape %}
            </div>
        </div>
        <div class="row row_margin">
            <div class="col-sm-3">Изображение</div>
            <div class="col-sm-7">
                <div>
                    <div class="document_img"><img src="{{ asset('uploads/news_images/' ~ news.picture) }}" alt="word">
                    </div>
                </div>
            </div>
        </div>
        <div class="row row_margin">
            <ul class="list-inline">
                <li>
                    <button class="btn">
                        <a href="{{ path('news_edit', { 'id': news.id }) }}">Редактировать</a>
                    </button>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Удалить" class="btn">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
            <br>
            <ul>
                <li>
                    <a href="{{ path('news_index') }}">К списку</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

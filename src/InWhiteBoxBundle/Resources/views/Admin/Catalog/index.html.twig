{% extends 'InWhiteBoxBundle:Admin:admin.html.twig' %}
{% block title %}Каталог{% endblock %}
{% block body %}
    <h1>Каталог</h1>
    <ul>
        <li>
            <a href="{{ path('catalog_new') }}">Создать новый элемент каталога</a>
        </li>
    </ul>
    <table id="catalog" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>ID</th>
            <th>Картинка</th>
            <th>Описание</th>
        </tr>
        </thead>
        <tbody>
        {% for catalog_element in catalog%}
            <tr>
                <td><a href="{{ path('catalog_show', { 'id': catalog_element.id }) }}">{{ catalog_element.id }}</a></td>
                <td>{% if catalog.date %}{{ catalog_element.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    {% autoescape %}
                        {{ catalog.preview|raw }}
                    {% endautoescape %}
                </td>
                <td>
                    <div>
                        <div class="document_img"><img src="{{ asset('uploads/catalog_images/' ~ catalog_element.picture) }}" alt="word"></div>
                    </div>
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('catalog_show', { 'id': catalog_element.id }) }}">Подробнее...</a>
                        </li>
                        <li>
                            <a href="{{ path('catalog_edit', { 'id': catalog_element.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

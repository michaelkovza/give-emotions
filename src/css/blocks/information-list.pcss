.information-list {
  /*#535277;*/
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;

  &__item {
    display: inline-block;
    width: 150px;
    height: 150px;
    text-align: center;
    color: #fff;
    cursor: pointer;
    transform: scale(1);
    transition: transform 0.3s ease-in;
    margin-bottom: 10px;

    @media (--tablet-large) {
      width: 250px;
      height: 240px;

      &:hover {
        transform: scale(1.05);

        .information-list__button {
          background: var(--button-active-color);

        }
      }
    }

    @media (--desktop-large) {
      width: 500px;
      height: 370px;
      margin-bottom: 60px;
    }

    &--lamp {
      background: var(--color-information-lamp);
    }

    &--contacts {
      background: var(--color-information-contacts);
    }

    &--comments {
      background: var(--color-information-comments);
    }

    &--gallery {
      background: var(--color-information-gallery)
    }
  }

  &__image-wrapper {
    width: 50px;
    height: 50px;
    margin: 0 auto;
    padding: 30px 0 15px;

    @media (--tablet-large) {
      width: 100px;
      height: 100px;
    }

    @media (--desktop-large) {
      width: 150px;
      height: 200px;

    }
  }

  &__image {
    width: 100%;
    height: 100%;
  }

  &__title {
    padding-bottom: 15px;
    font-size: 20px;
    color: var(--color-information-text);
    line-height: 1;

    @media (--tablet-large) {
      line-height: 1.3;
    }
  }

  &__button {
    display: none;

    @media (--tablet-large) {
      display: block;
      width: 210px;
      height: 32px;
      text-align: left;
      padding: 0 15px;
      color: var(--color-information-text);
      background: var(--button-color);
      position: relative;
      transition: background 0.3s ease-in;
      margin: 0 auto;
      font-size: 14px;

      &:after {
        content: '';
        display: block;
        width: 18px;
        height: 18px;
        position: absolute;
        top: 50%;
        right: 0;
        transform: translate(-50%, -50%);
        background: url('../../images/information/alert.png') no-repeat center;
        background-size: 100%;

        @media (--desktop-large) {
          width: 28px;
          height: 28px;
        }
      }

      &:hover {
        background: var(--button-active-color);
      }
    }

    @media (--desktop-large) {
      width: 290px;
      height: 52px;
      font-size: 1em;
    }
  }



}